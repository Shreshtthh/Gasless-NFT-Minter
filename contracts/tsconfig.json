{
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "target": "es2022",
    "module": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "include": [
    "./hardhat.config.ts",
    "./scripts/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
